{
  "name": "scrapbox-extensions",
  "version": "0.0.1",
  "main": "dist/main.js",
  "repository": "git@github.com:kouMatsumoto/scrapbox-extensions.git",
  "author": "kou.matsumoto <matsumoto@bitcoinbank.co.jp>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "check": "yarn check:build && yarn check:test && yarn check:lint",
    "format": "yarn lint --fix && prettier --write .",
    "lint": "eslint 'src/**/*.ts'",
    "test": "yarn :jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 node_modules/.bin/ts-node --project tsconfig.json",
    "// 1": "Internal Scripts",
    ":check:build": "tsc --noEmit",
    ":check:diff": "git diff --exit-code --name-only .",
    ":check:lint": "yarn format && yarn :check:diff",
    ":check:test": "yarn test --ci --silent --detectOpenHandles --forceExit",
    ":jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest"
  },
  "engines": {
    "node": ">= 14.0.0",
    "yarn": ">=1.19.0"
  },
  "dependencies": {
    "fp-ts": "^2.5.4",
    "node-fetch": "^2.6.0",
    "rxjs": "^7.0.0-beta.0",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.9.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.4",
    "@types/ws": "^7.2.5",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-jest": "^25.4.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "date-fns": "^2.12.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "html-loader": "^1.1.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^25.4.0",
    "jest-environment-happy-dom": "^0.0.42",
    "node-sass": "^4.14.0",
    "prettier": "^2.0.5",
    "stylelint": "^13.3.3",
    "stylelint-config-recess-order": "^2.0.4",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.17.1",
    "svg-inline-loader": "^0.8.2",
    "ts-jest": "^25.4.0",
    "ts-loader": "^7.0.1",
    "ts-node": "^8.9.1",
    "tslib": "^1.11.1",
    "typescript": "^3.8.3",
    "uglifycss": "^0.0.29",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  }
