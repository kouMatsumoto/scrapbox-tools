{
  "name": "scrapbox-tools",
  "version": "0.0.3",
  "repository": "git@github.com:kouMatsumoto/scrapbox-tools.git",
  "author": "kou.matsumoto <kou.matsumoto.jp@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc",
    "ci": "concurrently 'yarn :check:build' 'yarn :check:test' 'yarn :check:lint'",
    "format": "yarn lint --fix && prettier --write .",
    "lint": "eslint 'src/**/*.ts'",
    "release": "yarn --frozen-lockfile && yarn build --project ./tsconfig.package.json && yarn publish --non-interactive",
    "test": "yarn :jest -c jest.config.js",
    "ts-node": "node --max-old-space-size=8000 node_modules/.bin/ts-node --project tsconfig.json",
    "// 1": "Internal Scripts",
    ":check:build": "tsc --noEmit",
    ":check:diff": "git diff --exit-code --name-only .",
    ":check:lint": "yarn format && yarn :check:diff",
    ":check:test": "yarn test --ci --silent --detectOpenHandles --forceExit",
    ":jest": "node --max_old_space_size=4096 ./node_modules/.bin/jest"
  },
  "engines": {
    "node": ">= 14.0.0",
    "yarn": ">=1.20.0"
  },
  "dependencies": {
    "node-fetch": "^2.6.1",
    "rxjs": "^7.0.1",
    "ws": "^7.4.5"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "@types/ws": "^7.4.4",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "concurrently": "^6.1.0",
    "date-fns": "^2.21.3",
    "dotenv": "^9.0.2",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tslib": "^2.2.0",
    "typescript": "^4.3.1-rc"
  }
}
